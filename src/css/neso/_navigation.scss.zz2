nav.top {
  background-color: lighten(color("gray"), 30%);
  border-bottom: color("gray") 1px solid;
  padding: 0.5rem 1rem;

  .brand {
    margin-right: 1rem;
    font-weight: bold; }

  ul {
    display: inline;
    padding: 0;
    list-style: none; }

  li {
    margin-right: 0.6rem;
    display: inline-block; }

  a {
    color: lighten(color("text"), 40%);
    text-decoration: none;

    &:hover {
      color: color("text"); }}}
