nav.top {
  background-color: lighten(color("gray"), 30%);
  border-bottom: color("gray") 1px solid;
  padding: 0.5rem 1rem; }

nav .brand {
  margin-right: 1rem;
  font-weight: bold; }

nav ul {
  display: inline;
  padding: 0;
  list-style: none; }

nav li {
  margin-right: 0.6rem;
  display: inline-block; }

nav a {
  color: lighten(color("text"), 20%);
  text-decoration: none;

  :hover {
    color: color("text"); }}
